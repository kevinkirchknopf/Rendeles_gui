        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"  />


            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF00FDE0">
            <Button Content="Rendelés" Margin="0,15,0,15" Height="32"/>
            <Button Content="Új Étel" Margin="0,15,0,15" Height="32"/>
            <Button Content="Új futár" Margin="0,15,0,15" Height="32"/>
            <Button Content="Étel lista" Margin="0,15,0,15" Height="32"/>
            <Button Content="Futár Lista" Margin="0,15,0,15" Height="32"/>
        </StackPanel>
       
    </Grid>
</Window>
